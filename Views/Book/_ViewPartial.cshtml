@model List<BookViewModel>

@if (!Model.Any())
{
    <h4>No found books yet...</h4>
}
else
{
    <div class="container">
        <div class="row card-header">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="col col-md-3 mb-3">
                    <div class="card" style="width: 18rem; height:42rem">
                        <img src="@Model[i].ImageUrl" style="height:28rem;">
                        <div class="card-body" style="height:14rem">
                            <h5 style="height:3rem" class="card-title">@Model[i].Title</h5>
                            <p style="height:2rem" class="text-secondary">@Model[i].AuthorName</p>
                            <h4 style="height:2rem" class="card-text">@Model[i].Price lv.</h4>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-primary">Details</a>
                            <a asp-controller="Book" asp-action="AddToFavourites" asp-route-id="@Model[i].Id" class="btn btn-success float-end">Add to favourites</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}